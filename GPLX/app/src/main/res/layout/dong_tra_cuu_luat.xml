<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:padding="10dp"
        android:id="@+id/imageviewHinhLuat"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_toRightOf="@id/imageviewHinhLuat"
        android:id="@+id/textviewTenLuat"
        android:text="Tên luật"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Mô tả nội dung luật"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textviewTenLuat"
        android:layout_toRightOf="@id/imageviewHinhLuat"
        android:id="@+id/textviewMoTaLuat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"/>
    <TextView
        android:id="@+id/textViewTienPhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiền phạt"
        android:textColor="#F44336"
        android:layout_below="@id/textviewMoTaLuat"
        android:layout_toRightOf="@id/imageviewHinhLuat"
        android:textSize="12sp"/>

</RelativeLayout>